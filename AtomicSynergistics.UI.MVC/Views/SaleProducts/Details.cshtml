@model AtomicSynergistics.DATA.EF.Models.SaleProduct

@{
    ViewData["Title"] = Model.Product.ProductName + " Sales";
}

<h1>@ViewData["Title"]</h1>
<h2 class="text-clientGreen">Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 pt-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt class ="col-sm-2 pt-2">
            @Html.DisplayNameFor(model => model.SaleQuantity)
        </dt>
        <dd class ="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.SaleQuantity)
        </dd>
        <dt class="col-sm-2 pt-2">
            @Html.DisplayNameFor(model => model.Sale)
        </dt>
        <dd class="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.Sale.SaleTotal)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-clientDkGrey" asp-action="Edit" asp-route-id="@Model?.SaleProductId">Edit</a>
    <a class="btn btn-clientGreen" asp-action="Index">Back to List</a>
</div>
