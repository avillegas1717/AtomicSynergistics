@model AtomicSynergistics.DATA.EF.Models.ProductStatus

@{
    ViewData["Title"] = "Edit Product Status";
}

<div class="row">
    <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">Edit:</h3>
                <h4 class="card-title text-center">@Model.ProductStatusName</h4>
                <hr/>
                <form asp-action="Edit" class="forms-sample">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ProductStatusId" />
                    <div class="form-group row">
                        <label asp-for="ProductStatusName" class="col-sm-3 col-form-label"></label>
                        <div class="col-sm-9">
                            <input type="text" asp-for="ProductStatusName" class="form-control bg-clientBlack text-light">
                            <span asp-validation-for="ProductStatusName" class="text-danger"></span>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-clientGreen me-2">Submit</button>
                    <a asp-action="index" class="btn btn-dark">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
