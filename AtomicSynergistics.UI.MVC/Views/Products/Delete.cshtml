@model AtomicSynergistics.DATA.EF.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1 class="DelHead">Delete</h1>

<h3 class="DelText">Are you sure you want to delete this?</h3>
<div class="container pt-3 flex-column">
    <div>
        <h4 class="DelHeader">Product</h4>
        <hr />
        <dl class="row DelRow">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductName):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CostPerUnit):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CostPerUnit)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PricePerUnit):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PricePerUnit)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UnitType):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnitType)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UnitsInStock):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnitsInStock)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.UnitsOnOrder):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.UnitsOnOrder)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductStatus):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductStatus.ProductStatusName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ProductType):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ProductType.ProductTypeName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Vendor.VendorName):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Vendor.VendorName)
            </dd>
        </dl>

        <a asp-action="index" asp-route-id="ProductsController" class=" btn btn-inverse-clientGreen">Back</a>

        <button type="button" class="btn btn-inverse-danger " data-bs-toggle="modal" data-bs-target="#delModal">
            Delete
        </button>

        <!-- Modal -->
        <div class="modal fade DelModal" id="delModal" tabindex="-1" aria-labelledby="delModalLabel" aria-hidden="true">
            <div class="modal-dialog delDialog">
                <div class="modal-content delContent">
                    <div class="modal-header delHeader">
                        <h2 class="modal-title fs-7" id="delModalLabel">DELETE</h2>
                        <br />
                        <h1 class="modal-title fs-5" id="delModalLabel">You are about to delete:</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        <!-- Table for Modal -->
                        <table class="delModalTable">
                            <tr>
                                <th>Product Name:</th>
                                <td>@Html.DisplayFor(model => model.ProductName)</td>
                            </tr>
                            <tr>
                                <th>Description:</th>
                                <td>@Html.DisplayFor(model => model.Description)</td>
                            </tr>
                            <tr>
                                <th>Cost Per Unit:</th>
                                <td>@Html.DisplayFor(model => model.CostPerUnit)</td>
                            </tr>
                            <tr>
                                <th>Price Per Unit:</th>
                                <td>@Html.DisplayFor(model => model.PricePerUnit)</td>
                            </tr>
                            <tr>
                                <th>Unit Type:</th>
                                <td>@Html.DisplayFor(model => model.UnitType)</td>
                            </tr>
                            <tr>
                                <th>Units In Stock:</th>
                                <td>@Html.DisplayFor(model => model.UnitsInStock)</td>
                            </tr>
                            <tr>
                                <th>Units On Order:</th>
                                <td>@Html.DisplayFor(model => model.UnitsOnOrder)</td>
                            </tr>
                            <tr>
                                <th>Product Status:</th>
                                <td>@Html.DisplayFor(model => model.ProductStatus.ProductStatusName)</td>
                            </tr>
                            <tr>
                                <th>Product Type:</th>
                                <td>@Html.DisplayFor(model => model.ProductType.ProductTypeName)</td>
                            </tr>
                            <tr>
                                <th>Vendor:</th>
                                <td>@Html.DisplayFor(model => model.Vendor.VendorName)</td>
                            </tr>
                        </table>
                    </div>

                    <div class="modal-footer">
                        <a asp-action="index" asp-route-id="ProductsController" class=" btn btn-inverse-clientGreen">Back</a>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="ProductId" />
                            <input type="submit" value="Delete" class="btn btn-inverse-danger delBtn" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .delModalTable {
        width: 100%;
        background-color: #000000; /* Light gray background color */
    }

        .delModalTable th,
        .delModalTable td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #455515; /* Lighter border color */
        }

        .delModalTable th {
            background-color: #000000; /* Lighter gray background color for header */
        }
</style>
