}

<h1 class="DelHead">Delete</h1>

<h3 class="DelText">Are you sure you want to delete this?</h3>
<div class="container pt-3 flex-column">
    <div>
        <h4 class="DelHeader">Customer</h4>
        <hr />
        <dl class="row DelRow">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CustomerName):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CustomerName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ContactName):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContactName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ContactPhone):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContactPhone)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ContactEmail):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ContactEmail)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BillingAddress):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BillingAddress)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BillingCity):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BillingCity)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BillingState):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BillingState)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BillingPostalCode):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BillingPostalCode)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Country.CountryName):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Country.CountryName)
            </dd>
        </dl>

        <a asp-action="index" asp-route-id="CustomerController" class=" btn btn-inverse-clientGreen">Back</a>

        <button type="button" class="btn btn-inverse-danger " data-bs-toggle="modal" data-bs-target="#delModal">
            Delete
        </button>

        <!-- Modal -->
        <div class="modal fade DelModal" id="delModal" tabindex="-1" aria-labelledby="delModalLabel" aria-hidden="true">
            <div class="modal-dialog delDialog">
                <div class="modal-content delContent">
                    <div class="modal-header delHeader">
                        <h2 class="modal-title fs-7" id="delModalLabel">DELETE</h2>
                        <br />
                        <h1 class="modal-title fs-5" id="delModalLabel">You are about to delete:</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        <!-- Table for Modal -->
                        <table class="delModalTable">
                            <tr>
                                <th>Customer:</th>
                                <td>@Html.DisplayFor(model => model.CustomerName)</td>
                            </tr>
                            <tr>
                                <th>Contact Name:</th>
                                <td>@Html.DisplayFor(model => model.ContactName)</td>
                            </tr>
                            <tr>
                                <th>Contact Phone:</th>
                                <td>@Html.DisplayFor(model => model.ContactPhone)</td>
                            </tr>
                            <tr>
                                <th>Contact Email:</th>
                                <td>@Html.DisplayFor(model => model.ContactEmail)</td>
                            </tr>
                            <tr>
                                <th>Billing Address:</th>
                                <td>@Html.DisplayFor(model => model.BillingAddress)</td>
                            </tr>
                            <tr>
                                <th>Billing City:</th>
                                <td>@Html.DisplayFor(model => model.BillingCity)</td>
                            </tr>
                            <tr>
                                <th>Billing State:</th>
                                <td>@Html.DisplayFor(model => model.BillingState)</td>
                            </tr>
                            <tr>
                                <th>Billing Postal Code:</th>
                                <td>@Html.DisplayFor(model => model.BillingPostalCode)</td>
                            </tr>
                            <tr>
                                <th>Country:</th>
                                <td>@Html.DisplayFor(model => model.Country.CountryName)</td>
                            </tr>
                        </table>
                    </div>

                    <div class="modal-footer">

                        <a asp-action="index" asp-route-id="CustomerController" class=" btn btn-inverse-clientGreen">Back</a>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="CustomerId" />
                            <input type="submit" value="Delete" class="btn btn-inverse-danger delBtn" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .delModalTable {
        width: 100%;
        background-color: #000000; /* Light gray background color */
    }

        .delModalTable th,
        .delModalTable td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #455515; /* Lighter border color */
        }

        .delModalTable th {
