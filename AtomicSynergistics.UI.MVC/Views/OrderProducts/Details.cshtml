@model AtomicSynergistics.DATA.EF.Models.OrderProduct

@{
    ViewData["Title"] = "Order #" + Model.OrderId;
}

<h1>@ViewData["Title"]</h1>
<h2 class="text-clientGreen">Details</h2>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2 pt-2">
            @Html.DisplayNameFor(model => model.Order)
        </dt>
        <dd class="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.Order.OrderId)
        </dd>
        <dt class="col-sm-2 pt-2">
            @Html.DisplayNameFor(model => model.Product)
        </dt>
        <dd class="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.Product.ProductName)
        </dd>
        <dt class="col-sm-2 pt-2">
            @Html.DisplayNameFor(model => model.OrderQuantity)
        </dt>
        <dd class="col-sm-10 pt-2">
            @Html.DisplayFor(model => model.OrderQuantity)
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-clientDkGrey" asp-action="Edit" asp-route-id="@Model?.OrderProductId">Edit</a>
    <a class="btn btn-clientGreen" asp-action="Index">Back to List</a>
</div>
