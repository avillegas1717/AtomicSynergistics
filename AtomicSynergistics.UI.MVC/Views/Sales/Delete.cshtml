@model AtomicSynergistics.DATA.EF.Models.Sale

@{
    ViewData["Title"] = "Delete";
}

<h1 class="DelHead">Delete</h1>

<h3 class="DelText">Are you sure you want to delete this?</h3>
<div class="container pt-3 flex-column">
    <div>
        <h4 class="DelHeader">Sale</h4>
        <hr />
        <dl class="row DelRow">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SaleDate):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SaleDate)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Salesperson.FirstName):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Salesperson.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Customer.CustomerName):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Customer.CustomerName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SaleTotal):
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SaleTotal)
            </dd>
        </dl>

        <a asp-action="index" asp-route-id="SalesController" class=" btn btn-inverse-clientGreen">Back</a>

        <button type="button" class="btn btn-inverse-danger " data-bs-toggle="modal" data-bs-target="#delModal">
            Delete
        </button>

        <!-- Modal -->
        <div class="modal fade DelModal" id="delModal" tabindex="-1" aria-labelledby="delModalLabel" aria-hidden="true">
            <div class="modal-dialog delDialog">
                <div class="modal-content delContent">
                    <div class="modal-header delHeader">
                        <h2 class="modal-title fs-7" id="delModalLabel">DELETE</h2>
                        <br />
                        <h1 class="modal-title fs-5" id="delModalLabel">You are about to delete:</h1>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>

                    <div class="modal-body">
                        <!-- Table for Modal -->
                        <table class="delModalTable">
                            <tr>
                                <th>Sale Date:</th>
                                <td>@Html.DisplayFor(model => model.SaleDate)</td>
                            </tr>
                            <tr>
                                <th>Salesperson:</th>
                                <td>@Html.DisplayFor(model => model.Salesperson.FirstName)</td>
                            </tr>
                            <tr>
                                <th>Customer:</th>
                                <td>@Html.DisplayFor(model => model.Customer.CustomerName)</td>
                            </tr>
                            <tr>
                                <th>Sale Total:</th>
                                <td>@Html.DisplayFor(model => model.SaleTotal)</td>
                            </tr>
                        </table>
                    </div>

                    <div class="modal-footer">
                        <a asp-action="index" asp-route-id="SalesController" class=" btn btn-inverse-clientGreen">Back</a>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="SaleId" />
                            <input type="submit" value="Delete" class="btn btn-inverse-danger delBtn" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .delModalTable {
        width: 100%;
        background-color: #000000; /* Light gray background color */
    }

        .delModalTable th,
        .delModalTable td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #455515; /* Lighter border color */
        }

        .delModalTable th {
            background-color: #000000; /* Lighter gray background color for header */
        }
</style>
